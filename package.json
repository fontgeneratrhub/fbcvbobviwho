  "bugs": {
    "url": "https://github.com/junaidahmadalvi/kariger.com/issues"
  },
  "homepage": "https://github.com/junaidahmadalvi/kariger.com#readme",
  "dependencies": {
    "concurrently": "^6.4.0"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "eslint": "^8.38.0",
    "nodemon": "^2.0.22"
  }
}
